<% if @page.errors.any? %>
  <ul>
    <% @page.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>

<div class="form-group">
  <%= f.label :slug, "Slug" %>
  <%= f.text_field :slug %>
</div>
